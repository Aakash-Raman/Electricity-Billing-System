<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    android:layout_margin="10dp"
    tools:context="com.example.indrajeet.loginapp.ViewBillActivity">

    <Spinner
        android:id="@+id/spinnerMonth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp"
        android:background="@color/lightgray"
        android:entries="@array/Months"
        android:paddingLeft="18sp" />

    <TextView
        android:id="@+id/tvId"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/spinnerMonth"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@color/lightgray"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:textStyle="bold"
        android:paddingLeft="18sp"
        android:text="" />

    <TextView
        android:id="@+id/tvname"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvId"
        android:layout_marginTop="10dp"
        android:background="@color/lightgray"
        android:paddingLeft="18sp"
        android:text=""
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvaddress"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvname"
        android:layout_marginTop="10dp"
        android:background="@color/lightgray"
        android:paddingLeft="18sp"
        android:text=""
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvcname"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvaddress"
        android:layout_marginTop="83dp"
        android:background="@color/lightgray"
        android:paddingLeft="18sp"
        android:text=""
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvmonth"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvcname"
        android:layout_marginTop="10dp"
        android:background="@color/lightgray"
        android:paddingLeft="18sp"
        android:text=""
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvbill"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/tvmonth"
        android:layout_marginTop="10dp"
        android:background="@color/lightgray"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:textStyle="bold"
        android:paddingLeft="18sp"
        android:text="" />

    <Button
        android:id="@+id/bView"
        style="@android:style/Widget.Material.Button.Inset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvaddress"
        android:layout_marginTop="12dp"
        android:background="@drawable/ovalbackgroundyellow"
        android:text="View and Download Bill" />

</RelativeLayout>
